//player

function make_player()
	player = {}
	player.x = 0
	player.y = 0
	player.dy = 0
	player.lives = 0
	player.ncoin = 0
	player.sprite = 0
end

function move_player()

	player.dy = gravity
	
	--jump
 if (btnp(2)) then
  player.dy-=11
 end
 
 --move player right
 if btn(1) then
   player.x+=1 --right
 end
 
 --move player left
 if btn(0) then
   player.x-=1 --left
 end
 
 --move to new position
 player.y+=player.dy
end

function draw_player()	
 spr(player.sprite,player.x,player.y)
end
